generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       Role
  last_login DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  chats chat[]
}

model chat {
  id         Int      @id @default(autoincrement())
  user_id    Int
  content    String
  created_at DateTime @default(now())

  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model cctv {
  id         Int      @id @default(autoincrement())
  name       String
  path_slug  String
  rtsp_url   String
  status     Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Role {
  admin
  public
}
